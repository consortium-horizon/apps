server {
  listen 80;
  server_name wiki.old.consortium-horizon.com;

  root /var/www/wiki/current;
  index index.html index.htm index.php;

  access_log /var/www/wiki/shared/log/nginx.access.log main;
  error_log /var/www/wiki/shared/log/nginx.error.log;
  rewrite_log on;

  location ~ \.php$ {
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_pass unix:/var/run/php5-fpm.sock;
    fastcgi_index index.php;
    include fastcgi_params;
  }

  location / {
  }
}
