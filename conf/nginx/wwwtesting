server {
  listen 8080;
  listen [::]:8080 ipv6only=on;

  server_name www.consortium-horizon.com;

  root /var/www/webappstesting/current/www;
  index index.html;

  access_log /var/www/webappstesting/shared/log/www/nginx.access.log main;
  error_log /var/www/webappstesting/shared/log/www/nginx.error.log;
  rewrite_log on;

  location /forum {
    root /var/www/webappstesting/current;
    index index.html index.htm index.php;

    access_log /var/www/webappstesting/shared/log/forum/nginx.access.log;
    error_log /var/www/webappstesting/shared/log/forum/nginx.error.log;

    # RSS feeds
    #location ~* \.rss$ {
    #  add_header Access-Control-Allow-Origin *;
    #}

    # Pretty URLs
    location ^~ /forum/discussion/download/ { rewrite ^/forum/(.+)$ /index.php?p=$1 last; }
    location ^~ /forum/utility/thumbnail/ { rewrite ^/forum/(.+)$ /index.php?p=$1 last; }
    location /forum { try_files $uri $uri/ @forum; }

    location ~ \.php$ {
      fastcgi_split_path_info ^(.+\.php)(/.+)$;
      fastcgi_pass unix:/var/run/php5-fpm.sock;
      fastcgi_index index.php;
      include fastcgi_params;
    }
  }
  location @forum { rewrite ^/forum/(.+)$ /forum/index.php?p=$1 last; }

  # Assets
  #location ~* \.(js|css|png|jpg|jpeg|gif|ico)(\?ver=[0-9.]+)?$ {
  #  expires 1y;
  #}

  # XMPP server
  location /http-bind {
    proxy_pass         http://127.0.0.1:5280/http-bind;
    # proxy_redirect     off;

    proxy_set_header   Host             $host;
    # proxy_set_header   X-Real-IP        $remote_addr;
    # proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;

    proxy_buffering off;
    tcp_nodelay on;

    # client_max_body_size       10m;
    # client_body_buffer_size    128k;

    # proxy_connect_timeout      90;
    # proxy_send_timeout         90;
    # proxy_read_timeout         90;

    # proxy_buffer_size          4k;
    # proxy_buffers              4 32k;
    # proxy_busy_buffers_size    64k;
    # proxy_temp_file_write_size 64k;
  }
}
